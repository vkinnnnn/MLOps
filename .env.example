# Student Loan Intelligence System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===================================
# API KEYS (REQUIRED)
# ===================================
# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# ===================================
# DATABASE CONFIGURATION
# ===================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/student_loan_intelligence

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ===================================
# APPLICATION CONFIGURATION
# ===================================
# Application Name
APP_NAME=Student Loan Intelligence

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=false

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application Port
PORT=8000

# Host Address
HOST=0.0.0.0

# ===================================
# AI/MODEL CONFIGURATION
# ===================================
# Default AI Model
DEFAULT_MODEL claude-3-sonnet-20241022

# Maximum Tokens for AI Responses
MAX_TOKENS=4096

# AI Model Temperature (0.0-2.0)
TEMPERATURE 0.7

# OpenAI Model for specific tasks
OPENAI_MODEL=gpt-4-turbo

# ===================================
# PROCESSING CONFIGURATION
# ===================================
# Maximum file upload size (MB)
MAX_FILE_SIZE=50

# Supported file formats
SUPPORTED_FORMATS=pdf,docx,jpg,jpeg,png,tiff,bmp

# Document processing timeout (seconds)
PROCESSING_TIMEOUT=300

# OCR Engine (tesseract, easyocr, both)
OCR_ENGINE=both

# ===================================
# SECURITY CONFIGURATION
# ===================================
# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_32_char_hex

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Expiration Time (hours)
JWT_EXPIRATION_HOURS=24

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===================================
# PERFORMANCE CONFIGURATION
# ===================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Cache TTL (seconds)
CACHE_TTL=3600

# Maximum worker processes
MAX_WORKERS=4

# ===================================
# MONITORING & LOGGING
# ===================================
# Enable Prometheus metrics
PROMETHEUS_ENABLED=true

# Prometheus Port
PROMETHEUS_PORT=9090

# Log File Path
LOG_FILE_PATH=logs/student_loan_intelligence.log

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===================================
# EXTERNAL SERVICES
# ===================================
# AWS S3 Bucket (for file storage)
AWS_S3_BUCKET=your-s3-bucket-name

# AWS Region
AWS_REGION=us-east-1

# AWS Access Key ID
AWS_ACCESS_KEY_ID=your_aws_access_key

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# ===================================
# DEVELOPMENT CONFIGURATION
# ===================================
# Enable development middleware
ENABLE_DEV_MIDDLEWARE=true

# Hot reload in development
HOT_RELOAD=true

# Database auto-reload
DB_AUTO_RELOAD=true

# ===================================
# TESTING CONFIGURATION
# ===================================
# Test Database URL
TEST_DATABASE_URL=sqlite:///test_student_loan_intelligence.db

# Disable external API calls in tests
TEST_DISABLE_EXTERNAL_APIS=true

# Mock AI responses in tests
TEST_MOCK_AI_RESPONSES=true

# ===================================
# MLOPS CONFIGURATION
# ===================================
# Airflow Home Directory
AIRFLOW_HOME=/opt/airflow

# DAGs Directory
DAGS_DIR=dags

# Airflow Executor
AIRFLOW_EXECUTOR=LocalExecutor

# MLflow Tracking URI
MLFLOW_TRACKING_URI=http://localhost:5000

# ===================================
# FEATURE FLAGS
# ===================================
# Enable new features in development
ENABLE_BETA_FEATURES=false

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable advanced analytics
ENABLE_ANALYTICS=true

# Enable user analytics tracking
ENABLE_USER_TRACKING=false
